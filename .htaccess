# Esta é uma regra de redirecionamento
RewriteEngine On
RewriteRule ^old-url$ /new-url [R=301,L]

# Esta é uma regra para remover a extensão .php dos arquivos
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

# Esta é uma regra para forçar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Define a página de acordo com o erro
ErrorDocument 404 "<style>*{padding:0; margin:0;}section{height: 100vh;display: flex;flex-direction: column;justify-content: center;align-items: center;background: #F0F1F3;}title-404{font-family: cursive;display: block;font-weight: 800;font-size: 5rem;color:#F0F1F3;}description-404{font-family: cursive;font-weight: 700;color:#fff;font-size: 1.5rem;}a{color: #00ffde;font-family: cursive;text-decoration: none;}</style> <section ><div style='background:#000;width: 50%;height: 50%;background: #47414d;border-radius: 6px;display: flex;flex-direction: column;justify-content: center;align-items: center;'><title-404>404</title-404><description-404>Como voce parou aqui!</description-404><a href='https://%{HTTP_HOST}/paulodevelop.com'>Voltar</a></div></section>"


# Restringir o acesso a diretórios, apenas os arquivos podem ser acessados
Options -Indexes

# Permitir acesso a index.php para todos
<Files "index.php">
    Order Allow,Deny
    Allow from all
</Files>

# Negar acesso a arquivos .Class.
<FilesMatch ".Class.*">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Negar acesso a arquivos .Controller.
<FilesMatch ".Controller.*">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Negar acesso a arquivos .json
<FilesMatch ".json">
    Order Deny,Allow
    Deny from all
</FilesMatch>